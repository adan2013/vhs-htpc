<Window x:Class="RemoteWindowsController.DiagMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteWindowsController"
        mc:Ignorable="d"
        Title="DiagMessage" Height="250" Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    <Grid Background="SteelBlue">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Name="status">
            STATUS
        </TextBlock>
    </Grid>
</Window>
